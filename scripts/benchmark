#!/bin/bash

# Exit on any error
set -e

echo "Running Locust load test..."

# Run locust in headless mode (no UI)
locust -f ../benchmarks/locustfile.py \
    --host=http://localhost:8000 \
    --users=10 \
    --html=report.html \
    --headless \
    --spawn-rate=15 \
    --run-time=20s \

echo "Locust load test completed!"

